<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeScreen">

    <fragment
        android:id="@+id/homeScreen"
        android:name="com.example.weatherapp.home_screen.view.HomeScreen"
        android:label="@string/home_screen"
        tools:layout="@layout/fragment_home_screen" />

    <fragment
        android:id="@+id/alarmScreen"
        android:name="com.example.weatherapp.alarm_screen.AlarmScreen"
        android:label="@string/alarm_screen"
        tools:layout="@layout/fragment_alarm_screen" />
    <fragment
        android:id="@+id/favouriteScreen"
        android:name="com.example.weatherapp.favourite_screen.FavouriteScreen"
        android:label="fragment_favourite_screen"
        tools:layout="@layout/fragment_favourite_screen">
        <action
            android:id="@+id/action_favouriteScreen_to_googleMapFragment"
            app:destination="@id/googleMapScreen" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.weatherapp.settings_screen.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/googleMapScreen"
        android:name="com.example.weatherapp.google_map.GoogleMapFragment"
        android:label="@string/google_map_screen"
        tools:layout="@layout/fragment_google_map">
        <action
            android:id="@+id/action_googleMapFragment_to_favouriteScreen"
            app:destination="@id/favouriteScreen" />
    </fragment>
</navigation>